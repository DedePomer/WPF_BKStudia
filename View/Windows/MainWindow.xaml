<Window x:Class="WPF_BKStudia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_BKStudia"
        
        xmlns:vmm="clr-namespace:WPF_BKStudia.ViewModel.Windows"
        xmlns:vmp="clr-namespace:WPF_BKStudia.ViewModel.Pages"
        xmlns:vp="clr-namespace:WPF_BKStudia.View.Pages"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            
            <DataTemplate DataType="{x:Type vmp:MenuPageViewModel}">
                <vp:MenuPage/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vmp:CreateTestViewModel}">
                <vp:CreateTestPage/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vmp:TakeTestPageViewModel}">
                <vp:TakeTestPage/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vmp:GetTesttedMenuViewModel}">
                <vp:GetTesttedMenuPage/>
            </DataTemplate>

        </ContentControl.Resources>
    </ContentControl>
</Window>
