             xmlns:local="clr-namespace:WPF_BKStudia.View.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.Resources>
        
        
    </UserControl.Resources>
    
